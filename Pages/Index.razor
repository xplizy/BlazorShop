@page "/"
@using BlazorShop.DataAccessLayer
@using BlazorShop.Interface
@using BlazorShop.Models
@using System.Collections.Generic
@inject NavigationManager NavigationManager
@inject IProducts productAccessLayer
@inject ICartService CartService

<div class="container">
    <div class="logo-container">
        <img src="/s247o.png" alt="Butikens logotyp" />
    </div>
    <div class="product-container">
        @foreach (var product in products)
        {
            <div class="product">
                <h3>@product.Name</h3>
                <p>Pris: @product.Price kr</p>
                <button @onclick="() => AddToCart(product)">Lägg till</button>
                @if (CartService.CartItems.Any(item => item.Product.Id == product.Id))
                {
                    <button @onclick="() => RemoveFromCart(product)">Ta bort</button>
                }
            </div>
        }
    </div>
    <div class="cart-container">
        <div class="cart-header">
            <h2 class="cart-title">Din varukorg</h2>
            <button class="checkout-button" @onclick="GoToCheckout">Kassa</button>
        </div>
        <ul class="cart-items">
            @foreach (var cartItem in CartService.CartItems)
            {
                <li class="cart-item">@cartItem.Product.Name - @cartItem.Quantity st - @cartItem.Product.Price kr/st</li>
            }
        </ul>
        <p class="cart-total">Totalt: @CartService.TotalPrice kr</p>
    </div>
</div>

@code {
    private List<Products> products = new List<Products>();

    protected override async Task OnInitializedAsync()
    {
        products = await productAccessLayer.GetAllProducts();
    }

    private void AddToCart(Products product)
    {
        CartService.AddToCart(product, 1);
    }

    private void RemoveFromCart(Products product)
    {
        CartService.RemoveFromCart(product);
    }

    private void GoToCheckout()
    {
        NavigationManager.NavigateTo("/kassa");
    }
}

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        text-align: center;
    }

    .logo-container {
        margin-bottom: 20px;
    }

    .product-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-gap: 20px;
    }

    .product {
        width: 100%;
        margin-bottom: 20px;
        padding: 10px;
        background-color: #f3f3f3;
        text-align: center;
        border-radius: 5px;
    }

        .product img {
            width: 100%;
            max-height: 200px;
            object-fit: cover;
            margin-bottom: 10px;
            border-radius: 5px;
        }

    .cart-container {
        margin-top: 40px;
        text-align: left;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
    }

    .cart-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .cart-title {
        font-size: 24px;
        font-weight: bold;
        margin: 0;
    }

    .checkout-button {
        background-color: #4CAF50;
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .checkout-button:hover {
            background-color: #45a049;
        }

    .cart-items {
        list-style: none;
        padding: 0;
    }

    .cart-item {
        margin-bottom: 10px;
        font-size: 16px;
    }

    .cart-total {
        font-weight: bold;
        font-size: 18px;
        margin-top: 10px;
    }
</style>